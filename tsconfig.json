{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./"
  },
  "include": ["src", "vite.config.js", "__test__"]
}
